
<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</button>
    </view>
  </view>

    <!-- image2poem -->
  <view class="uploader">
    <navigator url="../index/index" open-type="navigate" class="uploader-text">
      <text>看图作诗</text>
    </navigator>
  </view>

    <!-- OCR识别银行卡 -->
  <view class="uploader">
    <navigator url="../ocr/ocr" open-type="navigate" class="uploader-text">

      <text>OCR测试</text>
    </navigator>
  </view>

      <!-- 看图说话 -->
  <view class="uploader">
    <navigator url="../caption/caption" open-type="navigate" class="uploader-text">
      <text>看图说话</text>
    </navigator>
  </view>

    <!-- detect -->
  <view class="uploader">
    <navigator url="../detect/detect" open-type="navigate" class="uploader-text">
      <text>物体识别</text>
    </navigator>
  </view>

      <!-- tag -->
  <view class="uploader">
    <navigator url="../tag/tag" open-type="navigate" class="uploader-text">
      <text>多标签识别</text>
    </navigator>
  </view>


    <!-- 上传图片 -->
  <view class="uploader">
    <navigator url="../sendimg/sendimg" open-type="navigate" class="uploader-text">
      <text>上传图片</text>
    </navigator>
  </view>

    <!-- 测试 -->
  <view class="uploader">
    <navigator url="../test/test" open-type="navigate" class="uploader-text">
      <text>测试函数</text>
    </navigator>
  </view>


</view>
